    <script>
        const translations = {
            fr: {
                'tagline': 'Créer · Coudre · Connecter',
                'h1': 'Dessinez.<br>L\'IA crée le patron.<br><span class="highlight">Cousez.</span>',
                'h-sub': 'La création de vêtements, accessible à tous.',
                'cta': 'Créer mon premier patron',
                'trust': 'Gratuit · Sans carte · 60 secondes',
                'd1-label': 'Votre croquis',
                'd1-desc': 'Dessin simple ou photo',
                'd2-label': 'Patron professionnel',
                'd2-desc': 'Prêt à coudre, toutes tailles',
                'how-title': 'Comment ça marche',
                's1-h': 'Dessinez',
                's1-p': 'Croquis rapide ou description',
                's2-h': 'IA génère',
                's2-p': 'Patron en 60 secondes',
                's3-h': 'Téléchargez',
                's3-p': 'PDF prêt à imprimer',
                'proof': 'patrons déjà créés',
                'final-h': 'Rejoignez la révolution',
                'final-p': 'Accès anticipé + 3 patrons gratuits',
                'btn': 'Commencer',
                'success': '✓ Merci ! Vérifiez votre email.',
                'footer': 'Créer · Coudre · Connecter',
                'email-ph': 'votre@email.com'
            },
            en: {
                'tagline': 'Create · Stitch · Connect',
                'h1': 'Sketch.<br>AI creates the pattern.<br><span class="highlight">Sew.</span>',
                'h-sub': 'Garment creation, accessible to everyone.',
                'cta': 'Create my first pattern',
                'trust': 'Free · No card · 60 seconds',
                'd1-label': 'Your sketch',
                'd1-desc': 'Simple drawing or photo',
                'd2-label': 'Professional pattern',
                'd2-desc': 'Ready to sew, all sizes',
                'how-title': 'How it works',
                's1-h': 'Sketch',
                's1-p': 'Quick drawing or description',
                's2-h': 'AI generates',
                's2-p': 'Pattern in 60 seconds',
                's3-h': 'Download',
                's3-p': 'Print-ready PDF',
                'proof': 'patterns already created',
                'final-h': 'Join the revolution',
                'final-p': 'Early access + 3 free patterns',
                'btn': 'Get Started',
                'success': '✓ Thanks! Check your email.',
                'footer': 'Create · Sew · Connect',
                'email-ph': 'your@email.com'
            }
        };
        
        let currentLang = 'fr';
        
        function setLang(lang) {
            currentLang = lang;
            document.getElementById('btn-fr').classList.toggle('active', lang === 'fr');
            document.getElementById('btn-en').classList.toggle('active', lang === 'en');
            document.getElementById('formLang').value = lang;
            
            document.querySelectorAll('[data-i18n]').forEach(el => {
                const key = el.getAttribute('data-i18n');
                if (translations[lang][key]) {
                    el.innerHTML = translations[lang][key];
                }
            });
            
            const emailInput = document.getElementById('emailInput');
            if (emailInput) {
                emailInput.placeholder = translations[lang]['email-ph'];
            }
        }
        
        // Counter animation
        let count = 2847;
        setInterval(() => {
            count += Math.floor(Math.random() * 3) + 1;
            document.getElementById('counter').textContent = count.toLocaleString(currentLang === 'fr' ? 'fr-FR' : 'en-US');
        }, 7000);
        
        // Email form with Formspree
        document.getElementById('emailForm').addEventListener('submit', async (e) => {
            e.preventDefault();
            
            const btn = document.getElementById('submitBtn');
            const originalText = btn.textContent;
            btn.textContent = '⏳';
            btn.disabled = true;
            
            try {
                const formData = new FormData(e.target);
                
                const response = await fetch(e.target.action, {
                    method: 'POST',
                    body: formData,
                    headers: {
                        'Accept': 'application/json'
                    }
                });
                
                if (response.ok) {
                    document.getElementById('successMsg').classList.add('show');
                    e.target.reset();
                    
                    setTimeout(() => {
                        document.getElementById('successMsg').classList.remove('show');
                    }, 5000);
                } else {
                    throw new Error('Submission failed');
                }
            } catch (error) {
                alert(currentLang === 'fr' 
                    ? '❌ Erreur lors de l\'inscription. Réessaye!' 
                    : '❌ Signup error. Please try again!');
            } finally {
                btn.textContent = originalText;
                btn.disabled = false;
            }
        });
        
        // Smooth scroll
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                e.preventDefault();
                const target = document.querySelector(this.getAttribute('href'));
                if (target) {
                    target.scrollIntoView({behavior: 'smooth', block: 'start'});
                }
            });
        });
        
        setLang('fr');
    </script>
</body>
</html>
